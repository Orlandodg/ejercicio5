    private void botontotalActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        String num = numero.getText();
        String des = descripcion.getText();
        int cant = Integer.parseInt(cantidad.getText());
        double pre= Double.parseDouble(precio.getText());
        Fac factura = new Fac(num,des,cant,pre);
        double mon = factura.obtenerMontoFactura();
        String total = String.valueOf(mon);
        pantalla.setText(total);
    }                                          

